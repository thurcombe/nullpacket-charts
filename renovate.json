{
  "extends": ["config:recommended"],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": ["charts/jellyfin/Chart\\.yaml"],
      "matchStrings": [
        "appVersion:\\s?\"(?<currentValue>\\d+\\.\\d+\\.\\d+)\""
      ],
      "datasourceTemplate": "docker",
      "depNameTemplate": "linuxserver/jellyfin",
      "versioningTemplate": "semver"
    },
    {
      "customType": "regex",
      "managerFilePatterns": ["charts/jellyfin/Chart\\.yaml"],
      "matchStrings": [
        "version:\\s(?<currentValue>\\d+\\.\\d+\\.\\d+)"
      ],
      "datasourceTemplate": "github-tags",
      "depNameTemplate": "nullpacket/jellyfin-chart-version",
      "versioningTemplate": "semver"
    }
  ],
  "packageRules": [
    {
      "matchFileNames": ["charts/jellyfin/Chart.yaml"],
      "matchDatasources": ["docker"],
      "commitMessageTopic": "jellyfin helm chart",
      "semanticCommits": "enabled",
      "labels": ["helm", "docker", "jellyfin"],
      "automerge": false
    },
    {
      "matchDepNames": ["nullpacket/jellyfin-chart-version"],
      "commitMessageTopic": "bump jellyfin chart version",
      "semanticCommits": "enabled",
      "labels": ["helm", "chart-version"],
      "automerge": false
    }
  ]
}
