{
  "extends": [
    "config:recommended"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "charts/jellyfin/Chart\\.yaml"
      ],
      "matchStrings": [
        "appVersion:\\s?\"(?<currentValue>\\d+\\.\\d+\\.\\d+)\""
      ],
      "datasourceTemplate": "docker",
      "depNameTemplate": "linuxserver/jellyfin",
      "versioningTemplate": "semver"
    }
  ],
  "bumpVersion": "[object Object]",
  "packageRules": [
    {
      "matchFileNames": [
        "charts/jellyfin/Chart.yaml"
      ],
      "matchDatasources": [
        "docker"
      ],
      "commitMessageTopic": "Update jellyfin helm chart",
      "semanticCommits": "enabled",
      "labels": [
        "helm",
        "docker",
        "jellyfin"
      ],
      "automerge": false
    }
  ]
}
