{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "enabledManagers": ["regex"],

  "regexManagers": [
    {
      "fileMatch": ["(^|/)charts/.*/Chart\\.ya?ml$"],
      "matchStrings": [
        "appVersion:\\s*\"?(?<currentValue>[^\"\\s]+)\"?\\s*#\\s*renovate:\\s*datasource=docker\\s*depName=(?<depName>[^\\s]+)(?:\\s+registryUrl=(?<registryUrl>[^\\s]+))?"
      ],
      "datasourceTemplate": "docker",
      "versioningTemplate": "docker"
    }
  ],
   "packageRules": [
    {
      "description": "Only treat LSIO qbittorrent app tags as updates",
      "matchManagers": ["regex"],
      "matchDatasources": ["docker"],
      "matchDepNames": ["linuxserver/qbittorrent"],
      "registryUrls": ["https://index.docker.io"],

 
      "extractVersion": "^v?(?<version>\\d+\\.\\d+\\.\\d+)",

      "allowedTags": [
        "^version-\\d+\\.\\d+\\.\\d+-r\\d+$",
        "^\\d+\\.\\d+\\.\\d+-r\\d+-ls\\d+$",
        "^\\d+\\.\\d+\\.\\d+-ls\\d+$"
      ],

      "versioning": "semver"
    }
  ]
}