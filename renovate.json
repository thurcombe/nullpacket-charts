{
  "extends": ["config:base"],
  "regexManagers": [
  
    {
      "fileMatch": ["^charts/jellyfin/Chart.yaml$"],
      "matchStrings": ["appVersion:\\s*\"?(?<currentValue>[^\"]+)\"?"],
      "datasource": "docker",
      "depName": "linuxserver/jellyfin"
    }
  ],
  "bumpVersions": [
    {
      "name": "Bump Helm chart version",
      "filePatterns": ["^charts/[^/]+/Chart.yaml$"],
      "bumpType": "patch",
      "matchStrings": ["version:\\s*\"?(?<version>\\d+\\.\\d+\\.\\d+)\"?"]
    }
  ],
  "packageRules": [
    {
      "matchManagers": ["regex"],
      "matchDatasources": ["docker"],
      "groupName": "Helm chart appVersion updates",
      "semanticCommitType": "fix",
      "commitMessageTopic": "{{depName}}"
    }
  ]
}
