{
  "extends": ["config:recommended"],
  "onboarding": false,
  "regexManagers": [
    {
      "description": "Update Docker tag in appVersion of Chart.yaml",
      "fileMatch": ["^Chart\\.yaml$"],
      "matchStrings": [
        "(?m)^#\\s*renovate:\\s*datasource=(?<datasource>\\S+)\\s+depName=(?<depName>\\S+)(?:\\s+versioning=(?<versioning>\\S+))?\\s*\\nappVersion:\\s+\"?(?<currentValue>[^\"]+)\"?"
      ]
    }
  ]
}
