{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "enabledManagers": ["regex"],

  "regexManagers": [
    {
      "fileMatch": ["(^|/)charts/.*/Chart\\.ya?ml$"],
      "matchStrings": [
        "appVersion:\\s*\"?(?<currentValue>[^\"\\s]+)\"?\\s*#\\s*renovate:\\s*datasource=docker\\s*depName=(?<depName>[^\\s]+)(?:\\s+registryUrl=(?<registryUrl>[^\\s]+))?"
      ],
      "datasourceTemplate": "docker",
      "versioningTemplate": "docker"
    }
  ],
  "packageRules": [
    {
      "description": "LinuxServer qBittorrent: use only LSIO app-tag formats",
      "matchManagers": ["regex"],
      "matchDatasources": ["docker"],
      "matchDepNames": ["linuxserver/qbittorrent"],
      "registryUrls": ["https://index.docker.io"],
      "versioning": "semver",
      "extractVersion": "^(?:version-(?<version>\\d+\\.\\d+\\.\\d+)(?:-r\\d+)?)$|^(?<version>\\d+\\.\\d+\\.\\d+)-(?:r\\d+-)?ls\\d+$"
    }
  ]
}