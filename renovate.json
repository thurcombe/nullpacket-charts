{
  "extends": ["config:recommended"],
  "enabledManagers": ["regex"],
  "regexManagers": [
    {
      "fileMatch": ["charts/jellyfin/Chart\\.yaml"],
      "matchStrings": [
        "appVersion:\\s*\"(?<currentValue>\\d+\\.\\d+\\.\\d+)\""
      ],
      "depNameTemplate": "linuxserver/jellyfin",
      "datasourceTemplate": "docker",
      "versioningTemplate": "semver"
    },
    {
      "fileMatch": ["charts/jellyfin/Chart\\.yaml"],
      "matchStrings": [
        "version:\\s*(?<currentValue>\\d+\\.\\d+\\.\\d+)"
      ],
      "depNameTemplate": "linuxserver/jellyfin-chart-version",
      "datasourceTemplate": "npm",
      "extractVersion": false,       
      "versioningTemplate": "semver"
    }
  ],
  "packageRules": [
    {
      "matchDepNames": ["linuxserver/jellyfin-chart-version"],
      "bumpVersion": "patch",
      "commitMessageTopic": "bump jellyfin chart version",
      "semanticCommits": "enabled",
      "labels": ["helm", "chart-version"],
      "automerge": false
    },
    {
      "matchDepNames": ["linuxserver/jellyfin"],
      "commitMessageTopic": "jellyfin appVersion",
      "semanticCommits": "enabled",
      "labels": ["helm", "docker", "jellyfin"],
      "automerge": false
    }
  ]
}
