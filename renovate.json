{
  "extends": ["config:recommended"],
  "regexManagers": [
    {
      "fileMatch": ["^charts/jellyfin/Chart\\.yaml$"],
      "matchStrings": [
        "appVersion:\\s?\"(?<currentValue>\\d+\\.\\d+\\.\\d+)\""
      ],
      "depNameTemplate": "linuxserver/jellyfin",
      "datasourceTemplate": "docker",
      "versioningTemplate": "semver"
    },
    {
      "fileMatch": ["^charts/jellyfin/Chart\\.yaml$"],
      "matchStrings": [
        "version:\\s(?<currentValue>\\d+\\.\\d+\\.\\d+)"
      ],
      "depNameTemplate": "jellyfin-chart-version",
      "datasourceTemplate": "docker",  // Must be *something* valid
      "versioningTemplate": "semver"
    }
  ],
  "packageRules": [
    {
      "matchDepNames": ["linuxserver/jellyfin"],
      "commitMessageTopic": "jellyfin appVersion",
      "semanticCommits": "enabled",
      "labels": ["docker", "helm", "jellyfin"],
      "automerge": false
    },
    {
      "matchDepNames": ["jellyfin-chart-version"],
      "commitMessageTopic": "helm chart version",
      "semanticCommits": "enabled",
      "labels": ["helm", "chart-version"],
      "automerge": false
    }
  ]
}
