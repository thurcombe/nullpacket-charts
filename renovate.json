{
  "extends": ["config:base"],
  "regexManagers": [
    {
      "fileMatch": ["^charts/jellyfin/Chart.yaml$"],
      "matchStrings": [
        "appVersion:\\s?\"?(?<currentValue>.*?)\"?\\s*#\\s*renovate: datasource=docker depName=linuxserver/jellyfin versioning=semver"
      ],
      "datasourceTemplate": "docker",
      "packageNameTemplate": "linuxserver/jellyfin",
      "versioningTemplate": "semver",
      "extractVersionTemplate": "{{{ currentValue }}}"
    },
    {
      "fileMatch": ["^charts/jellyfin/Chart.yaml$"],
      "matchStrings": [
        "version:\\s?(?<currentValue>\\d+\\.\\d+\\.\\d+)"
      ],
      "datasourceTemplate": "helm",
      "packageNameTemplate": "jellyfin",
      "versioningTemplate": "semver",
      "extractVersionTemplate": "{{{ currentValue }}}"
    }
  ],
  "packageRules": [
    {
      "matchDatasources": ["docker"],
      "matchPackageNames": ["linuxserver/jellyfin"],
      "groupName": "Update jellyfin image and chart version",
      "postUpdateOptions": ["bumpVersion"]
    }
  ]
}
