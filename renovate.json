{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "helmv3": {"enabled": true},
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": ["/^charts/jellyfin/Chart\\.yaml$/"],
      "matchStrings": [
        "appVersion:\\s*\"?(?<currentValue>[^\"]+)\"?\\s*#\\s*renovate:\\s*datasource=docker\\s+depName=linuxserver/jellyfin"
      ],
      "datasourceTemplate": "docker",
      "depNameTemplate": "linuxserver/jellyfin",
      "versioningTemplate": "docker"
    }
  ],
  "packageRules": [
    {
      "matchManagers": ["regex", "helmv3"],
      "matchDatasources": ["docker"],
      "matchPackageNames": ["linuxserver/jellyfin"],
      "matchFileNames": ["charts/jellyfin/Chart.yaml"],
      "groupName": "Update jellyfin image and bump chart version",
      "versioning": "docker",
      "bumpVersion": "patch",
      "commitMessagePrefix": "chore(deps): ",
      "commitMessageTopic": "Jellyfin chart and image"
    }
  ]
}