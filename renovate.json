{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "helmv3": {
    "enabled": true,
    "fileMatch": [
      "^charts/jellyfin/Chart\\.yaml$"
    ]
  },
  "packageRules": [
    {
      "matchManagers": [
        "helmv3"
      ],
      "matchFileNames": [
        "charts/jellyfin/Chart.yaml"
      ],
      "matchDatasources": [
        "docker"
      ],
      "matchPackageNames": [
        "linuxserver/jellyfin"
      ],
      "groupName": "Update jellyfin chart and image",
      "versioning": "docker",
      "bumpVersion": "patch",
      "commitMessagePrefix": "chore(deps): ",
      "commitMessageTopic": "Jellyfin chart and image"
    }
  ]
}