{
  "extends": ["config:base"],
  "regexManagers": [
    {
      "fileMatch": ["^charts/jellyfin/Chart.yaml$"],
      "matchStrings": [
        "appVersion:\\s?\"?(?<currentValue>.*)\"?"
      ],
      "datasourceTemplate": "docker",
      "depNameTemplate": "docker.io/jellyfin/jellyfin",
      "versioningTemplate": "loose",
      "bumpVersion": "patch"
    },
    {
      "fileMatch": ["^charts/jellyfin/Chart.yaml$"],
      "matchStrings": [
        "version:\\s?\"?(?<currentValue>\\d+\\.\\d+\\.\\d+)\"?"
      ],
      "datasourceTemplate": "regex",
      "depNameTemplate": "chart-version",
      "versioningTemplate": "semver",
      "bumpVersion": "patch",
      "bumpVersionStrategy": "increase"
    }
  ]
}
