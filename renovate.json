{
  "regexManagers": [
    {
      "fileMatch": ["^charts/jellyfin/Chart.yaml$"],
      "matchStrings": [
        "appVersion:\\s*\"?(?<currentValue>[0-9a-zA-Z._\\-]+)\"?"
      ],
      "datasource": "docker",
      "depName": "linuxserver/jellyfin"
    }
  ],
  "bumpVersions": [
    {
      "name": "Bump Helm chart version when appVersion changes",
      "filePatterns": ["^charts/jellyfin/Chart.yaml$"],
      "bumpType": "patch",
      "matchStrings": ["version:\\s*\"?(?<version>\\d+\\.\\d+\\.\\d+)\"?"]
    }
  ]
}