{
  "extends": ["config:base"],
  "regexManagers": [
    {
      "fileMatch": ["^charts/jellyfin/Chart.yaml$"],
      "matchStrings": [
        "appVersion:\\s*\"?(?<currentValue>.*?)\"?\\s*#\\s*renovate: datasource=docker depName=linuxserver/jellyfin versioning=semver"
      ],
      "datasourceTemplate": "docker",
      "packageNameTemplate": "linuxserver/jellyfin",
      "versioningTemplate": "semver",
      "extractVersionTemplate": "{{{ currentValue }}}"
    }
  ],
  "bumpVersions": [
    {
      "filePatterns": ["charts/jellyfin/Chart.yaml"],
      "matchStrings": [
        "version:\\s(?<version>\\d+\\.\\d+\\.\\d+)"
      ],
      "bumpType": "patch"
    }
  ],
  "packageRules": [
    {
      "matchDatasources": ["docker"],
      "matchPackageNames": ["linuxserver/jellyfin"],
      "groupName": "Update jellyfin image and bump chart version"
    }
  ]
}
