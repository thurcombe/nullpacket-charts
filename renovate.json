{
  "extends": [
    "config:recommended"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "charts/jellyfin/Chart\\.yaml/"
      ],
      "matchStrings": [
        "appVersion:\\s?\"(?<currentValue>\\d+\\.\\d+\\.\\d+)\""
      ],
      "datasourceTemplate": "docker",
      "depNameTemplate": "hub.docker.io/linuxserver/jellyfin",
      "versioningTemplate": "semver"
    }
  ],
  "bumpVersions": [
    {
      "filePatterns": [
        "{{packageFileDir}}/Chart.(yaml|yml)"
      ],
      "matchStrings": [
        "version:\\s(?<version>[^\\s]+)"
      ],
      "bumpType": "{{#if isPatch}}patch{{else}}minor{{/if}}"
    }
  ],
  "packageRules": [
    {
      "matchFileNames": [
        "charts/jellyfin/Chart.yaml"
      ],
      "matchDatasources": [
        "docker"
      ],
      "commitMessageTopic": "jellyfin helm chart",
      "semanticCommits": "enabled",
      "labels": [
        "helm",
        "docker",
        "jellyfin"
      ],
      "automerge": false
    }
  ]
}
