{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "onboarding": false,
  "requireConfig": "optional",
  "helmv3": {
    "enabled": true
  },
  "regexManagers": [
    {
      "fileMatch": ["^charts/jellyfin/Chart\\.yaml$"],
      "matchStrings": [
        "appVersion:\\s*\"?(?<currentValue>[^\"]+)\"?\\s*#\\s*renovate:\\s*datasource=docker\\s+depName=linuxserver/jellyfin"
      ],
      "datasourceTemplate": "docker",
      "depNameTemplate": "linuxserver/jellyfin",
      "versioningTemplate": "docker"
    }
  ],
  "packageRules": [
    {
      "matchDatasources": ["docker"],
      "matchPackageNames": ["linuxserver/jellyfin"],
      "matchFiles": ["charts/jellyfin/Chart.yaml"],
      "groupName": "Update jellyfin image and bump chart version",
      "versioning": "docker",
      "bumpVersion": "patch"
    }
  ]
}