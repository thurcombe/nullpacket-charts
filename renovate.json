{
  "extends": ["config:recommended"],
  "regexManagers": [
    {
      "fileMatch": ["^charts/jellyfin/Chart\\.yaml$"],
      "matchStrings": [
        "appVersion:\\s?\"?(?<currentValue>\\d+\\.\\d+\\.\\d+)\"?"
      ],
      "datasourceTemplate": "docker",
      "depNameTemplate": "linuxserver/jellyfin",
      "versioningTemplate": "semver"
    },
    {
      "fileMatch": ["^charts/jellyfin/Chart\\.yaml$"],
      "matchStrings": [
        "version:\\s(?<currentValue>\\d+\\.\\d+\\.\\d+)"
      ],
      "datasourceTemplate": "docker",
      "depNameTemplate": "linuxserver/jellyfin",
      "versioningTemplate": "semver"
    }
  ],
  "packageRules": [
    {
      "matchPackageNames": ["linuxserver/jellyfin"],
      "matchPaths": ["charts/jellyfin/Chart.yaml"],
      "commitMessageTopic": "Update jellyfin Helm chart",
      "semanticCommits": "enabled",
      "labels": ["helm", "docker", "jellyfin"],
      "automerge": false
    }
  ]
}
