{
  "extends": ["config:recommended"],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": ["charts/jellyfin/Chart\\.yaml"],
      "matchStrings": [
        "appVersion:\\s?\"(?<currentValue>\\d+\\.\\d+\\.\\d+)\""
      ],
      "datasourceTemplate": "docker",
      "depNameTemplate": "linuxserver/jellyfin",
      "versioningTemplate": "semver"
    },
    {
      "customType": "regex",
      "managerFilePatterns": ["charts/jellyfin/Chart\\.yaml"],
      "matchStrings": [
        "version:\\s(?<currentValue>\\d+\\.\\d+\\.\\d+)"
      ],
      "datasourceTemplate": "repoconfig",
      "depNameTemplate": "nullpacket/jellyfin-chart-version",
      "versioningTemplate": "semver",
      "extractVersionTemplate": "{{currentValue}}"
    }
  ],
  "packageRules": [
    {
      "matchDepNames": ["linuxserver/jellyfin", "nullpacket/jellyfin-chart-version"],
      "commitMessageTopic": "jellyfin Helm chart",
      "semanticCommits": "enabled",
      "labels": ["helm", "jellyfin"],
      "automerge": false,
      "groupName": "Jellyfin chart and image"
    }
  ]
}
