{
  "extends": ["config:base"],
  "customManagers": [
    {
      "customType": "regex",
      "description": "jellyfin",
      "managerFilePatterns": ["^charts/jellyfin/Chart.yaml$"],
      "matchStrings": [
        "appVersion:\\s*\"?(?<currentValue>[0-9a-zA-Z._\\-]+)\"?"
      ],
      "datasource": "docker",
      "depName": "linuxserver/jellyfin"
    }
  ],
  "bumpVersions": [
    {
      "filePatterns": ["^charts/[^/]+/Chart.yaml$"],
      "matchPattern": "version:\\s*\"?(?<currentValue>\\d+\\.\\d+\\.\\d+)\"?",
      "replacementTemplate": "version: {{newVersion}}",
      "bumpType": "patch"
    }
  ],
  "packageRules": [
    {
      "matchManagers": ["regex"],
      "matchDatasources": ["docker"],
      "groupName": "Helm appVersion updates",
      "commitMessageTopic": "{{depName}}",
      "semanticCommitType": "fix"
    }
  ]
}
